@model E2BizzEventManagementSystem.Model.Event

@{
    ViewBag.Title = "Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.PageTitle @Model.EventName</h1>

<table class="table table-hover table-striped">
    <tbody>
        <tr>
            <th>Event Id</th>
            <td>@Model.EventId</td>
        </tr>
        <tr>
            <th>Event Code</th>
            <td>@Model.EventCode</td>
        </tr>
        <tr>
            <th>Event Name</th>
            <td>@Model.EventName</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>@Model.StartDate</td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>@Model.EndDate</td>
        </tr>
        <tr>
            <th>Fees</th>
            <td>@Model.Fees</td>
        </tr>
        <tr>
            <th>Total Attendance</th>
            <td>@Model.SeatsFilled</td>
        </tr>
        <tr>
            <th>Logo</th>
            <td>
                <img src="@Url.Content(Model.Logo)" alt="@Model.EventName" />
            </td>
        </tr>
    </tbody>
</table>

